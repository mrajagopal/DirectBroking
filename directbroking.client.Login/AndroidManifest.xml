<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="directbroking.client"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name="directbroking.Client"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:persistent="true" >
        <activity
            android:name=".DirectBrokingWebView"
            android:alwaysRetainTaskState="false"
            android:clearTaskOnLaunch="true" />
        <activity
            android:name=".DBTextView"
            android:alwaysRetainTaskState="false"
            android:clearTaskOnLaunch="true" />
        <activity
            android:name=".MyPortfolio"
            android:alwaysRetainTaskState="false"
            android:clearTaskOnLaunch="true" />
        <activity
            android:name="AboutUs"
            android:alwaysRetainTaskState="false"
            android:clearTaskOnLaunch="true" />
        <activity
            android:name=".Login"
            android:alwaysRetainTaskState="false"
            android:clearTaskOnLaunch="true"
            android:label="Direct Broking"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyOrders"
            android:label="@string/title_activity_my_orders" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>