<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey" >

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/red"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/portfolio"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        android:textStyle="bold" />

    <include
        android:id="@+id/txtStock_ref"
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtHeader"
        android:layout_marginTop="0dp"
        layout="@layout/txtstock" />

    <TextView
        android:id="@+id/textCostPrice"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtStock_ref"
        android:layout_below="@+id/txtHeader"
        android:layout_toRightOf="@+id/txtStock_ref"
        android:background="@color/dark_grey"
        android:gravity="center"
        android:text="@string/costPrice"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textMarketPrice"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textCostPrice"
        android:layout_below="@+id/txtHeader"
        android:layout_toRightOf="@+id/textCostPrice"
        android:background="@color/dark_grey"
        android:text="@string/marketPrice"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textMarketValue"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textMarketPrice"
        android:layout_alignTop="@+id/textMarketPrice"
        android:layout_toRightOf="@+id/textMarketPrice"
        android:background="@color/dark_grey"
        android:gravity="center"
        android:text="@string/marketvalue"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textUnrealisedPL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textMarketValue"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textMarketValue"
        android:layout_toRightOf="@+id/textMarketValue"
        android:background="@color/dark_grey"
        android:gravity="center"
        android:text="@string/profitLoss"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textSize="15dp" />

</RelativeLayout>